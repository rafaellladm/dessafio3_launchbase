{% extends "layout.njk"%}

{% block head %}
<title>Conteúdo</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="/style/conteudo.css">
{% endblock %}

{% block content %}
<div class="cards">
    <div id="starter" class="card">
        <div class="img">
            <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/starter.svg" alt="Logo">
        </div>
        <div class="titulos">
            <h3>Torne-se um programador desejado</h3>
        </div>
        <div class="conteudo">
            <p>5 módulos</p>
            <p>Gratuito</p>
        </div>
    </div>
    <div id="launchbase" class="card">
        <div class="img">
            <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/launchbase.svg" alt="Logo">
        </div>
        <div class="titulos">
            <h3>Domine programação do zero</h3>
        </div>
        <div class="conteudo">
            <p>16 módulos</p>
            <p>Pago</p>
        </div>
    </div>
    <div id="gostack" class="card">
        <div class="img">
            <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/gostack.svg" alt="Logo">
        </div>
        <div class="titulos">
            <h3>Treinamento imersivo</h3>
        </div>
        <div class="conteudo">
            <p>20 módulos</p>
            <p>Pago</p>
        </div>
    </div>
</div>

<div class="modal-overlay">
    <div class="modal">
        <a id="maximize" class="maximize-modal">
            <span class="material-icons">
                maximize
            </span>
        </a>
        <a id="close" class="close-modal">
            <i class="material-icons">close</i>
        </a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>

<script src="/script.js"></script>
{% endblock %}
