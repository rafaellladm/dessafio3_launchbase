{% extends "layout.njk"%}

{% block head %}
<title>Conteúdo</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="/style/conteudo.css">
{% endblock %}

{% block content %}
<div class="cards">

    {% for item in items %}
    <div id="{{ item.id }}" class="card">
        <div class="img">
            <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/{{ item.id }}.svg" alt="Logo">
        </div>
        <div class="titulos">
            <h3>{{ item.description }}</h3>
        </div>
        <div class="conteudo">
            <p>{{ item.n_modulo }} módulos</p>
            <p>{{ item.price }}</p>
        </div>
    </div>
    {% endfor %}
    
</div>

<script src="/script.js"></script>
{% endblock %}
