{% extends "layout.njk"%}

{% block head %}
<title>Conteúdo</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="/style/conteudo.css">
{% endblock %}

{% block content %}
<div class="cards">

    {% for item in items %}
    <div id="{{ item.id }}" class="card">
        <div class="img">
            <img src="https://storage.googleapis.com/golden-wind/bootcamp-launchbase/assets/{{ item.id }}.svg" alt="Logo">
        </div>
        <div class="titulos">
            <h3>{{ item.title }}</h3>
        </div>
        <div class="conteudo">
            <p>{{ item.n_modulo }} módulos</p>
            <p>{{ item.price }}</p>
        </div>
    </div>
    {% endfor %}
    
</div>

<div class="modal-overlay">
    <div class="modal">
        <a id="maximize" class="maximize-modal">
            <span class="material-icons">
                maximize
            </span>
        </a>
        <a id="close" class="close-modal">
            <i class="material-icons">close</i>
        </a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>

<script src="/script.js"></script>
{% endblock %}
